{
  "name": "@openzeppelin/platform-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "The OpenZeppelin Platform Software Development Kit",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "lodash": "^4.17.19",
    "@openzeppelin/platform-sdk-base-client": "0.1.0"
  },
  "devDependencies": {
    "@npmcli/fs": "3.1.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.157",
    "@types/node": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "code-style": "git+https://github.com/OpenZeppelin/code-style.git",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.0.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3",
    "nx-cloud": "latest",
    "nx": "^16.1.4"
  },
  "scripts": {
    "install-deps": "npm install --frozen-lockfile",
    "nx-build-skip-cache": "npm run build --skip-nx-cache",
    "nx-build-test-skip-cache": "npm run build-test --skip-nx-cache",
    "build": "nx run-many -t build",
    "build-test": "nx run-many -t style,build,test",
    "lint": "npm run lint:check --fix",
    "format:check": "prettier --check '**/*.{js,ts,tsx}'",
    "format": "npm run format:check --write",
    "lint:check": "eslint 'packages/**/src/**/*.{js,ts}' --quiet",
    "test": "nx run-many -t test --skip-nx-cache",
    "style": "npm run lint && npm run format",
    "skip-lib-ignore": "./hack/skip-lib-ignore.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenZeppelin/platform-sdk.git"
  },
  "author": "OpenZeppelin Platform <platform@openzeppelin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenZeppelin/platform-sdk/issues"
  },
  "homepage": "https://github.com/OpenZeppelin/platform-sdk#readme",
  "resolutions": {
    "@ethersproject/abstract-provider": "^5.6.1"
  }
}
