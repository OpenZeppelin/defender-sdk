{
  "name": "@openzeppelin/platform-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "The OpenZeppelin Platform Software Development Kit",
  "dependencies": {
    "@openzeppelin/platform-sdk-base-client": "0.1.0",
    "axios": "^1.4.0",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@npmcli/fs": "3.1.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.157",
    "@types/node": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "code-style": "https://github.com/OpenZeppelin/configs.git",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.1",
    "nx": "^16.1.4",
    "nx-cloud": "latest",
    "prettier": "^2.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "install-deps": "pnpm install --frozen-lockfile --ignore-scripts --prefer-offline",
    "nx-build-skip-cache": "pnpm run build --skip-nx-cache",
    "nx-build-test-skip-cache": "pnpm run build-test --skip-nx-cache",
    "nx-test-skip-cache": "pnpm run test --skip-nx-cache",
    "build": "nx run-many -t build --parallel=1",
    "build-test": "nx run-many -t style,build,test",
    "lint:check": "eslint 'packages/**/src/**/*.{js,ts}' --quiet",
    "lint:fix": "pnpm prettier:fix && pnpm lint:check && pnpm prettier:check",
    "prettier:check": "prettier --check '**/*.{js,ts,tsx}'",
    "prettier:fix": "prettier --write .",
    "test": "nx run-many -t test --parallel=1",
    "build:changed": "nx affected:build --base=origin/main --skip-nx-cache --parallel=1",
    "test:changed": "nx affected:test --base=origin/main --skip-nx-cache --parallel=1",
    "style": "pnpm lint:fix",
    "skip-lib-ignore": "./hack/skip-lib-ignore.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenZeppelin/platform-sdk.git"
  },
  "author": "OpenZeppelin Platform <platform@openzeppelin.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OpenZeppelin/platform-sdk/issues"
  },
  "engines": {
    "node": "16.20.0",
    "npm": "use pnpm",
    "pnpm": ">=7",
    "yarn": "use pnpm"
  },
  "homepage": "https://github.com/OpenZeppelin/platform-sdk#readme",
  "resolutions": {
    "@ethersproject/abstract-provider": "^5.6.1"
  }
}
